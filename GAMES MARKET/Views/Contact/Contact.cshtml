@{
    ViewBag.Title = "Contact";
}
<section>
    <h2 class="m-md-3 text-center">Contacto</h2>
    <div class="container-fluid">
        <div class="row justify-content-md-center">
            <div class="col-lg-3 col-lg-4 justify-content-center">

                <form action="Register" method="POST">
                    <div class="form-group">
                        <label>Nombre</label>
                        <input type="text" class="form-control" name="nombre">
                    </div>
                    <div class="form-group">
                        <label>Apellidos</label>
                        <input type="text" class="form-control" name="apellidos">
                    </div>
                    <div class="form-group">
                        <label>Correo electrónico</label>
                        <input type="email" class="form-control" name="email">
                    </div>
                    <div class="form-group">
                        <label>Consulta</label>
                        <textarea class="form-control" rows="3"></textarea>
                    </div>
                    <span class="text-danger">@ViewBag.error</span>
                    <button type="submit" class="btn btn-primary w-100 mb-5">Enviar</button>
                    <div class="row">
                        <div class="col-6">
                            <a href="twitter.com/hotel_evento" class="">twitter.com/hotel_evento</a>
                        </div>
                        <div class="col-6 text-right">
                            <a href="instagram.com/hotel_evento" class="">instagram.com/hotel_evento</a>
                        </div>
                    </div>
                </form>

            </div>
        </div>
    </div>
</section>
