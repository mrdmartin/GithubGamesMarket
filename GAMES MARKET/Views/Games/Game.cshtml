@using GAMES_MARKET.Models;
@model JuegosModel

<h2 class="d-none d-md-flex justify-content-center"> @Model.nombre </h2>
<div class="container-fluid">
    <div class="row">
        @*CAROUSEL*@
        <div class="col-12 p-0 col-md-7 p-md-4">
            <div id="carouselExampleCaptions" class="carousel slide" data-ride="carousel">
                <ol class="carousel-indicators">
                    @{ var counter = 1; }
                    @foreach (var item in ViewData["capturas"] as List<CapturasModel>)
                    {
                        {
                            if (counter % 5 == 0)
                            {
                                @:
                            }
                            else
                            {
                                <li data-target="#carouselExampleCaptions" data-slide-to="@counter"></li>
                            }
                            counter++;
                        }
                    }
                </ol>
                <div class="carousel-inner">
                    @{counter = 1; }
                    @foreach (var item in ViewData["capturas"] as List<CapturasModel>)
                    {

                        {
                            if (counter % 5 == 0)
                            {
                                @:
                            }
                            if (counter == 1)
                            {
                                <div class="carousel-item active">
                                    <img src="~/Client/shared/img/screenshots/@item.img_ruta" class="d-block w-100" alt="Captura del videojuego">
                                </div>
                            }
                            else
                            {
                                <div class="carousel-item">
                                    <img src="~/Client/shared/img/screenshots/@item.img_ruta" class="d-block w-100" alt="Captura del videojuego">
                                </div>
                            }
                            counter++;
                        }
                    }
                </div>
                <a class="carousel-control-prev" href="#carouselExampleCaptions" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleCaptions" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>

        @*DATOS Y VIDEO*@
        <div class="col-12 p-0 col-md-5 p-md-4 mx-auto">
            <div class="card">
                <div class="embed-responsive embed-responsive-16by9">
                    <iframe src="@Model.trailer_url" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
                </div>

                <div class="card-body">
                    <h5 class="card-title">@Model.nombre</h5>
                    <img src="~/Client/shared/img/logos/@Model.img_rutaPlataforma" class="game-last-logo" alt="@Model.nombre_plataforma">
                    <p class="card-text">@Model.descripcion</p>
                    <button class="btn btn-primary">Comprar por @Model.precio€</button>
                </div>
            </div>
        </div>

        @*COMENTARIOS*@
    <div class="col-12">
        <form id="formPost" action="~/Games/Game/@Model.id_juego" method="post">
            <h5>Comentar</h5>
            <textarea class="w-100" name="comment"></textarea>
            <button type="submit" id="btnPost" class="btn btn-primary">Publicar</button>
        </form>
            @{ counter = 1; }
            @foreach (var item in ViewData["comentarios"] as List<ComentariosModel>)
            {
                {
                    if (counter % 8 == 0)
                    {
                        @:
                    }
                    else
                    {
                        <div class="border border-dark my-2 p-5">
                            <p>#@item.id_comentario - @item.nombre_usuario</p>
                            <p>@item.comentario</p>
                        </div>
                    }
                    counter++;
                }
            }



    </div>
    </div>
</div>
