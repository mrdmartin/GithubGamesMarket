@using GAMES_MARKET.Models;
@model List<JuegosModel>

@{
    ViewBag.Title = "List Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center">Búsqueda de juegos</h2>
<section>
    <form id="formFilter">
        <div class="form-row">
            <div class="col-7">
                <div class="input-group-prepend">
                    <input class="form-control form-control-lg " type="text" placeholder="Nombre del título" id="inputName">
                    <div class="input-group-append">
                        <span class="input-group-text">Buscar</span>
                    </div>
                </div>
            </div>
            <div class="col">
                <select class="custom-select custom-select-lg mb-3" id="selectGender">
                    <option selected value="0">---</option>

                    @foreach (var item in ViewData["GeneroLista"] as List<JuegosModel>)
                    {

                        <option value="@item.id_genero">@item.nombre_genero</option>
                    }

                </select>
            </div>
            <div class="col">
                <select class="custom-select custom-select-lg mb-3" id="selectPlatform">
                    <option selected value="0">---</option>

                    @foreach (var item in ViewData["PlataformaLista"] as List<JuegosModel>)
                    {
                        <option value="@item.id_plataforma" data-hook="platform">@item.nombre_plataforma</option>
                    }

                </select>
            </div>
        </div>

        <button id="btnSearch">Busca</button>
    </form>



    <div class="container-fluid">
        <div class="row">
            <div class="col-12 p-0">
                <table class="table table-image">
                    <thead class="thead-dark">
                        <tr>
                            <th scope="col"> Cáratula</th>
                            <th scope="col">Plataforma</th>
                            <th scope="col">Título</th>
                            <th scope="col" class="d-none d-md-table-cell">Distribuidor</th>
                            <th scope="col" class="d-none d-md-table-cell">Fecha de lanzamiento</th>
                            <th scope="col">Precio</th>
                            <th scope="col">Rebajas</th>
                        </tr>
                    </thead>

                    <tbody id="games_list">
                        @foreach (var item in Model)
                        {

                            <tr>
                                <td class="w-25">
                                    <a href="Game/@item.id_juego"><img src="~/Client/shared/img/gamescover/@item.img_ruta" alt="..." class="img-thumbnail"></a>
                                </td>
                                <td>
                                    <img src="~/Client/shared/img/logos/@item.img_rutaPlataforma" class="game-last-logo" alt="...">
                                </td>
                                <td>
                                    <a href="Game/@item.id_juego">@item.nombre</a>
                                </td>
                                <td class="d-none d-md-table-cell">@item.distribuidora</td>
                                <td class="d-none d-md-table-cell">@item.fecha_lanzamiento.ToShortDateString()</td>

                                @{var preciofinal = item.precio - (item.precio * item.descuento / 100);}

                                <td>@preciofinal€</td>
                                <td>@item.descuento%</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <template data-hook="game_template">
        <tr>
            <td class="w-25">
                <a href="" data-hook="img_link"><img src="" alt="imagen del juego" class="img-thumbnail" data-hook="img_game"></a>
            </td>
            <td>
                <img src="" class="game-last-logo" alt="..." data-hook="img_platform">
            </td>
            <td>
                <a href="" data-hook="name_link"><span data-hook="name_game"></span></a>
            </td>
            <td class="d-none d-md-table-cell"><span data-hook="name_distributor"></span></td>
            <td class="d-none d-md-table-cell"><span data-hook="release_date"></span></td>
            <td> <span data-hook="price"></span></td>
            <td><span data-hook="discount"></span></td>
        </tr>
    </template>

</section>



