
<div class="container-fluid">
    <div class="row justify-content-md-center">
        <div class="col-lg-3 col-lg-4 justify-content-center">
            <h2 class="m-md-3 text-center">Formulario de Compra</h2>

            <div class="border-dark">
                <h3>Datos del artítulo</h3>
                <p>Nombre:</p>
                <p>Plataforma:</p>
                <p>Precio:</p>
            </div>

            <form action="Buy" method="POST">
                <h3>Datos de compra</h3>
                <p>Email del comprador: @Session["Log"]</p>
                <div class="form-group">
                    <label>Número de la tarjeta</label>
                    <input type="number" class="form-control" name="tarj" min="0" maxlength="16">
                </div>
                <div class="form-group">
                    <label>Mes</label>
                    <input type="number" class="form-control" name="tarj_mes" min="1" max="12" maxlength="2">
                </div>
                <div class="form-group">
                    <label>Año</label>
                    <input type="number" class="form-control" name="tarj_ano" min="0" maxlength="2">
                </div>
                <div class="form-group">
                    <label>Número de seguridad</label>
                    <input type="number" class="form-control" name="contrasena">
                </div>
                <span class="text-danger">@ViewBag.error</span>
                <button type="submit" class="btn btn-primary w-100 mb-5">Comprar</button>
            </form>

        </div>
    </div>
</div>