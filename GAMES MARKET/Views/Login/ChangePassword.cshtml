@{
    ViewBag.Title = "Cambiar la contraseña";
    ViewBag.PageName = "ChangePassword";
}
<div class="container-fluid">
    <div class="row justify-content-md-center">
        <div class="col-lg-3 col-lg-4 justify-content-center">
            <h2 class="text-center">Recuperar contraseña</h2>
            <p>Introduce tu correo electrónico y te enviaremos un correo con la contraseña</p>
            <form id="logForm" action="~/Login/CambioContrasena" method="post">
                <input type="hidden" name=token value="@Model.token" />
                <div class="form-group">
                    <label>Nueva contraseña</label>
                    <input type="password" class="form-control" name="contrasena">
                    <label>Vuelve a escribir la contraseña</label>
                    <input type="password" class="form-control" name="contrasena2">
                </div>
                <span class="text-danger">@ViewBag.error</span>
                <button class="btn btn-primary w-100 mb-5">Recuperar</button>
            </form>
        </div>
    </div>
</div>