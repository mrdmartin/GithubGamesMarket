
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="row justify-content-md-center">
        <div class="col-lg-3 col-lg-4 justify-content-center">
            <h2 class="m-md-3 text-center">Registro</h2>
            <form id="logForm" action="LoginController/AddUser">
                <div class="form-group">
                    <label>Nombre</label>
                    <input type="text" class="form-control" id="regName">
                </div>
                <div class="form-group">
                    <label>Apellidos</label>
                    <input type="text" class="form-control" id="regSurname">
                </div>
                <div class="form-group">
                    <label>Correo electrónico</label>
                    <input type="email" class="form-control" id="regEmail">
                </div>
                <div class="form-group">
                    <label>Contraseña</label>
                    <input type="password" class="form-control" id="regPassword">
                </div>
                <div class="form-group">
                    <label>Confirmar Contraseña</label>
                    <input type="password" class="form-control" id="regPassword2">
                </div>
                <button type="submit" class="btn btn-primary w-100 mb-5">Enviar</button>
            </form>
        </div>
    </div>
</div>